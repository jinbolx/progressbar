<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="progress_unreached_color" format="color"/>
    <attr name="progress_reached_color" format="color"/>
    <attr name="progress_unreached_bar_height" format="dimension"/>
    <attr name="progress_reached_bar_height" format="dimension"/>
    <attr name="progress_text_size" format="dimension"/>
    <attr name="progress_text_color" format="color"/>
    <attr name="progress_text_offset" format="dimension"/>
    <attr name="progress_text_visible" format="enum">
        <enum name="visible" value="1"/>
        <enum name="invisible" value="0"/>
    </attr>
    <attr name="radius" format="dimension"/>
    <declare-styleable name="HorizontalProgressBar">
        <attr name="progress_unreached_color"/>
        <attr name="progress_reached_color" />
        <attr name="progress_unreached_bar_height" />
        <attr name="progress_reached_bar_height" />
        <attr name="progress_text_size" />
        <attr name="progress_text_color" />
        <attr name="progress_text_offset" />
        <attr name="progress_text_visible" />
    </declare-styleable>
    <declare-styleable name="RoundProgressBar">
        <attr name="radius"/>
    </declare-styleable>
</resources>